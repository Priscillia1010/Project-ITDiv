
@model RentalCar.Views.Auth.LoginModel
@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RentCar</title>
    <link rel="stylesheet" href="/css/login.css">
</head>
<body>
    <div class="form-container">
        <form id="loginForm">
            <h2>Login ke RentCar</h2>
            <label for="username">Username</label>
            <input type="text" id="username" placeholder="Masukan username Anda">
            <label for="password">Password</label>
            <input type="password" id="password" placeholder="Masukan password Anda">
            <button>Login</button>
            <p>Belum punya akun? Registrasi <a href="@Url.Action("Register", "Auth")">disini</a></p>

            @if (ViewBag.ErrorMessage != null)
            {
                <p style="color:red;">@ViewBag.ErrorMessage</p>
            }
        </form>
    </div>
</body>
</html>
